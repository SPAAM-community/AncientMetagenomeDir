{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://spaam-workshop.github.io/AncientMetagenomeDir/ancientmetagenome-anthropogenic/ancientmetagenome-anthropogenic_schema.json",
    "type": "array",
    "title": "JSON schema for AncientMetagenomeDir ancient anthropogenic metagenome data",
    "description": "The JSON schema for AncientMetagenomeDir ancient anthropogenic metagenome data",
    "additionalItems": false,
    "items": {
        "$id": "#/items",
        "type": "object",
        "title": "The items schema",
        "description": "An explanation about the purpose of this instance.",
        "default": {},
        "required": [
            "project_name",
            "publication_year",
            "publication_doi",
            "site_name",
            "latitude",
            "longitude",
            "geo_loc_name",
            "sample_name",
            "sample_age",
            "sample_age_doi",
            "collection_date",
            "material",
            "archive",
            "archive_accession"
        ],
        "properties": {
            "project_name": {
                "$id": "#/items/properties/project_name",
                "type": "string",
                "title": "AncientMetagenomeDir key of the publication",
                "description": "Format: surnameYYYY (if duplicate key but different publication, add a,b,c etc. as necessary)",
                "pattern": "^[a-zA-Z]+\\d{4}[a-z]?$",
                "examples": [
                    "Warinner2014",
                    "Muhlemann2018",
                    "Muhlemann2018a"
                ]
            },
            "publication_year": {
                "$id": "#/items/properties/publication_year",
                "type": "integer",
                "minimum": 1950,
                "maximum": 2100,
                "title": "Year of publication",
                "description": "Format: YYYY",
                "examples": [
                    2014
                ]
            },
            "publication_doi": {
                "$id": "#/items/properties/publication_doi",
                "type": "string",
                "pattern": "^10.\\d{4,9}\\/.+$",
                "title": "Digital Object Identifier (DOI) of the publication",
                "description": "A valid DOI code (not as an URL)",
                "examples": [
                    "10.1038/ng.2906"
                ]
            },
            "site_name": {
                "$id": "#/items/properties/site_name",
                "type": "string",
                "title": "The site_name schema",
                "description": "Name of the site as reported in the publication",
                "examples": [
                    "Dalheim"
                ]
            },
            "latitude": {
                "$id": "#/items/properties/latitude",
                "type": [
                    "number",
                    "null"
                ],
                "minimum": -90,
                "maximum": 90,
                "title": "Latitude",
                "description": "Ranges between -90 and 90",
                "examples": [
                    51.565
                ]
            },
            "longitude": {
                "$id": "#/items/properties/longitude",
                "type": [
                    "number",
                    "null"
                ],
                "minimum": -180,
                "maximum": 180,
                "title": "Longitude",
                "description": "Ranges between -180 and 180",
                "examples": [
                    8.84
                ]
            },
            "geo_loc_name": {
                "$id": "#/items/properties/geo_loc_name",
                "type": "string",
                "title": "Country name",
                "description": "Based on modern day definitions, based on INDSC Country list",
                "$ref": "https://spaam-workshop.github.io/AncientMetagenomeDir/assets/enums/geo_loc_name.json",
                "examples": [
                    "Germany"
                ]
            },
            "sample_name": {
                "$id": "#/items/properties/sample_name",
                "type": "string",
                "title": "Name of the sample",
                "description": "In most cases this should be the name of the host individual",
                "examples": [
                    "B61"
                ]
            },
            "sample_age": {
                "$id": "#/items/properties/sample_age",
                "type": "integer",
                "title": "Age of the sample, BP",
                "description": "Age of the sample in year before present (BP 1950), to the closest century",
                "examples": [
                    900
                ]
            },
            "sample_age_doi": {
                "$id": "#/items/properties/sample_age_doi",
                "type": [
                    "string",
                    "null"
                ],
                "pattern": "^10.\\d{4,9}\\/.+$",
                "title": "Digital Object Identifier (DOI) of the sample dating publication",
                "description": "A valid DOI code (not as an URL)",
                "examples": [
                    "10.1038/ng.2906"
                ]
            },
            "material": {
                "$id": "#/items/properties/material",
                "type": "string",
                "title": "Type of material metagenome is from",
                "description": "Sample type DNA was extracted from, derived from ENVO ontology terms ",
                "$ref": "https://spaam-workshop.github.io/AncientMetagenomeDir/assets/enums/material.json",
                "examples": [
                    "pot crust",
                    "parchment",
                ]
            },
            "collection_date": {
                "$id": "#/items/properties/collection_date",
                "type": [
                    "integer",
                    "null"
                ],
                "minimum": 1700,
                "maximum": 2100,
                "title": "Year of sample collection",
                "description": "Year of sample collection in YYYY format",
                "examples": [
                    2012
                ]
            },
            "archive": {
                "$id": "#/items/properties/archive",
                "type": "string",
                "title": "Archiving platform",
                "description": "Name of the nucleotide data archiving platform",
                "$ref": "https://spaam-workshop.github.io/AncientMetagenomeDir/assets/enums/archive.json",
                "examples": [
                    "ENA"
                ]
            },
            "archive_accession": {
                "$id": "#/items/properties/archive_accession",
                "type": [
                    "string",
                    "null"
                ],
                "title": "Archive accession number",
                "description": "Samples archive accession numbers, multiple records can be separated with commas",
                "examples": [
                    "SRS473742,SRS473743,SRS473744,SRS473745"
                ]
            }
        }
    }
}
